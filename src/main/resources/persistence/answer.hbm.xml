<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


    <class name="org.academiadecodigo.bootcamp.model.Answer" table="answers">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>

    </class>

    <class name="org.academiadecodigo.bootcamp.many2one.Car" table="car">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>

        <many-to-one class="org.academiadecodigo.bootcamp.many2one.Owner" name="owner" column="owner_id"
                     unique="true" not-null="true" cascade="all"/>

    </class>
</hibernate-mapping>